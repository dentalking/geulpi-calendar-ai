# Production Environment Configuration
NODE_ENV=production

# Security Configuration
JWT_SECRET_KEY_LENGTH=64
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# PostgreSQL Configuration - Production
POSTGRES_DB=geulpi_prod_db
POSTGRES_USER=geulpi_prod_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=require
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_CONNECTION_TIMEOUT=30000

# Redis Configuration - Production
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_ON_FAILOVER=100
REDIS_ENABLE_READY_CHECK=true
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# JWT Configuration - Production
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CALLBACK_URL=https://api.geulpi.com/auth/google/callback

# AI API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Frontend Environment Variables
NEXT_PUBLIC_GRAPHQL_URL=https://api.geulpi.com/graphql
NEXT_PUBLIC_API_URL=https://api.geulpi.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/geulpi
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=30
LOG_STRUCTURED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Service URLs
FRONTEND_URL=https://app.geulpi.com
BACKEND_URL=https://api.geulpi.com
ML_SERVER_URL=http://ml-server:8000

# CORS Configuration
CORS_ORIGINS=https://app.geulpi.com,https://admin.geulpi.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USERS=1800
CACHE_TTL_EVENTS=300

# Performance Configuration
CLUSTER_WORKERS=auto
MAX_MEMORY_USAGE=1GB
GC_INTERVAL=300000

# External Services
EMAIL_SERVICE_ENABLED=true
SMS_SERVICE_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
