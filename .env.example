# =============================================
# üéØ Geulpi Calendar AI - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# Node Environment
NODE_ENV=development

# =============================================
# üóÑÔ∏è Database Configuration
# =============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=geulpi_db
POSTGRES_USER=geulpi_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# =============================================
# üì¶ Redis Configuration
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================
# üîê Security Configuration
# =============================================
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_512_bits_here
JWT_EXPIRATION=24h

# =============================================
# üåê Google OAuth2 Configuration
# =============================================
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================
# ü§ñ AI API Keys
# =============================================
# OpenAI API Key (for general AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key (for Claude integration)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# =============================================
# üìç Google APIs Configuration
# =============================================
# For Maps, Places, Calendar integration
GOOGLE_API_KEY=your_google_api_key_here

# =============================================
# üîó Service URLs
# =============================================
# Frontend
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=ws://localhost:8080/graphql
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_ML_SERVER_URL=http://localhost:8000

# Backend
BACKEND_PORT=8080
FRONTEND_URL=http://localhost:3000

# ML Server
ML_SERVER_PORT=8000

# =============================================
# üì® Kafka Configuration
# =============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=geulpi-calendar

# =============================================
# üöÄ Deployment Configuration (Vercel)
# =============================================
# These will be set in Vercel dashboard
VERCEL_URL=
VERCEL_ENV=production