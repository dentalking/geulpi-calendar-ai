# Staging Environment Configuration
NODE_ENV=staging

# Security Configuration
JWT_SECRET_KEY_LENGTH=64
API_RATE_LIMIT_WINDOW_MS=300000
API_RATE_LIMIT_MAX_REQUESTS=1000

# PostgreSQL Configuration - Staging
POSTGRES_DB=geulpi_staging_db
POSTGRES_USER=geulpi_staging_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=prefer
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_CONNECTION_TIMEOUT=30000

# Redis Configuration - Staging
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=1
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_ON_FAILOVER=100
REDIS_ENABLE_READY_CHECK=true
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# JWT Configuration - Staging
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CALLBACK_URL=https://staging-api.geulpi.com/auth/google/callback

# AI API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Frontend Environment Variables
NEXT_PUBLIC_GRAPHQL_URL=https://staging-api.geulpi.com/graphql
NEXT_PUBLIC_API_URL=https://staging-api.geulpi.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/geulpi
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_MAX_FILES=10
LOG_STRUCTURED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=15s
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.5

# Service URLs
FRONTEND_URL=https://staging.geulpi.com
BACKEND_URL=https://staging-api.geulpi.com
ML_SERVER_URL=http://ml-server:8000

# CORS Configuration
CORS_ORIGINS=https://staging.geulpi.com,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=50MB
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Cache Configuration
CACHE_TTL_DEFAULT=1800
CACHE_TTL_USERS=900
CACHE_TTL_EVENTS=150

# Performance Configuration
CLUSTER_WORKERS=1
MAX_MEMORY_USAGE=2GB
GC_INTERVAL=300000

# External Services
EMAIL_SERVICE_ENABLED=true
SMS_SERVICE_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
